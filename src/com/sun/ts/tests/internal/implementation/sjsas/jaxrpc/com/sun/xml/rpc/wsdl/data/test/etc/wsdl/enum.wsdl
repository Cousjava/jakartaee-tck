<definitions
  name="HelloTest"
  targetNamespace="urn:test"
  xmlns="http://schemas.xmlsoap.org/wsdl/"
  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:tns="urn:test"
  xmlns:types="urn:test:schema">
  
  <types>
    <schema targetNamespace="urn:test:schema" xmlns="http://www.w3.org/2001/XMLSchema">
        <simpleType name="Colors">
            <restriction base="xsd:string">
                <enumeration value="green"/>
                <enumeration value="blue"/>                
            </restriction>
        </simpleType>
    </schema>
  </types>

  <message name="HelloRequest">
    <part name="argument" type="types:Colors"/>
    <part name="extra" type="xsd:string"/>
  </message>
  
  <message name="HelloResponse">
    <part name="result" type="types:Colors"/>
    <part name="extra" type="xsd:string"/>
  </message>  
  
  <portType name="Hello">
    <operation name="hello">
      <input message="tns:HelloRequest"/>
      <output message="tns:HelloResponse"/>
    </operation>  
  </portType>
  
  <binding name="HelloBinding" type="tns:Hello">
    <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
    <operation name="hello">
      <soap:operation soapAction="urn:test:hello"/>
      <input>
        <soap:body use="encoded" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/" namespace="urn:test"/>
      </input>
      <output>
        <soap:body use="encoded" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/" namespace="urn:test"/>
      </output>
    </operation>      
  </binding>
    
  <service name="HelloService">
    <port name="HelloPort" binding="tns:HelloBinding">
      <soap:address location="http://test.org/hello"/>
    </port>
  </service>
  
</definitions>
