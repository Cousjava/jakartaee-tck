<definitions xmlns="http://schemas.xmlsoap.org/wsdl/"
	     xmlns:tns="http://com.test/wsdl/OneWayHello"
	     xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
	     xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	     name="OneWayHello"
             targetNamespace="http://com.test/wsdl/OneWayHello">

  <types/>

  <message name="helloOneWay">
    <part name="name" type="xsd:string"/>
  </message>

  <portType name="HelloIF">
    <operation name="sayHello">
      <input message="tns:helloOneWay"/>
      <!-- there is no output message for one-way operation -->
    </operation>
  </portType>

  <binding name="HelloIFBinding" type="tns:HelloIF">
    <operation name="sayHello">
      <input>
        <soap:body
		encodingStyle="http://schemas.xmlsoap.org/soap/encoding/"
		use="encoded" namespace="http://com.test/wsdl/OneWayHello"/></input>
      <soap:operation soapAction=""/>
    </operation>
    <soap:binding transport="http://schemas.xmlsoap.org/soap/http" style="rpc"/>
  </binding>

  <service name="OneWayHello">
    <port name="HelloIFPort" binding="tns:HelloIFBinding">
      <soap:address xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
		    location="http://localhost:8080/hello-jaxrpc/hello"/>
    </port>
  </service>
</definitions>
